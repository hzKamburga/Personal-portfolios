<!DOCTYPE html>
<html lang="tr" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        black: '#000000',
                        white: '#ffffff',
                        gray: {
                            50: '#f9fafb',
                            100: '#f3f4f6',
                            200: '#e5e7eb',
                            300: '#d1d5db',
                            400: '#9ca3af',
                            500: '#6b7280',
                            600: '#4b5563',
                            700: '#374151',
                            800: '#1f2937',
                            900: '#111827',
                            950: '#030712',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                        mono: ['JetBrains Mono', 'monospace'],
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-out forwards',
                        'slide-up': 'slideUp 0.5s ease-out forwards',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(20px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' },
                        }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="bg-black text-white font-sans min-h-screen overflow-x-hidden selection:bg-white selection:text-black cursor-none">

    <!-- Custom Cursor -->
    <div id="custom-cursor" class="fixed top-0 left-0 w-5 h-5 bg-white rounded-full pointer-events-none z-50 mix-blend-difference transition-transform duration-100 ease-out hidden md:block"></div>
    <div id="cursor-follower" class="fixed top-0 left-0 w-12 h-12 border border-white rounded-full pointer-events-none z-40 transition-transform duration-300 ease-out hidden md:block"></div>

    <!-- Background Noise/Grid -->
    <div class="fixed inset-0 z-0 opacity-10 pointer-events-none" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>

    <!-- Top Banner (Discord) -->
    <div class="relative w-full h-[50vh] md:h-[60vh] overflow-hidden z-10">
        <img id="top-discord-banner" src="" alt="" class="w-full h-full object-cover object-center opacity-0 transition-opacity duration-700 grayscale hover:grayscale-0">
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black"></div>
    </div>

    <!-- Main Content -->
    <main class="relative z-20 max-w-7xl mx-auto px-6 -mt-32">
        
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            
            <!-- Left Column: Profile & Activity (Sticky) -->
            <div class="lg:col-span-4 lg:sticky lg:top-10 h-fit animate-fade-in">
                <!-- Profile Card -->
                <div class="bg-black/50 backdrop-blur-md border border-white/10 rounded-3xl p-8 mb-8 text-center lg:text-left">
                    <!-- Profile Image -->
                    <div class="relative inline-block mb-6 group">
                        <div class="absolute -inset-1 bg-gradient-to-r from-white to-gray-500 rounded-full blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
                        <div class="relative w-32 h-32 rounded-full overflow-hidden border-4 border-black bg-black mx-auto lg:mx-0">
                            <img id="discord-avatar" src="https://cdn.discordapp.com/embed/avatars/0.png" alt="Profile" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500">
                        </div>
                        <!-- Status Indicator -->
                        <div id="discord-status" class="absolute bottom-2 right-2 w-5 h-5 rounded-full border-4 border-black bg-gray-500" title="Offline"></div>
                    </div>

                    <h1 class="text-4xl font-extrabold tracking-tighter mb-2 text-white">
                        <%= config.personal.name %>
                    </h1>
                    <p class="text-gray-400 font-mono text-sm mb-6"><%= config.personal.title %></p>
                    <p class="text-gray-300 leading-relaxed mb-8 text-sm">
                        <%= config.personal.description %>
                    </p>

                    <!-- Social Links -->
                    <div class="flex flex-wrap justify-center lg:justify-start gap-3">
                        <% Object.entries(config.personal.social).forEach(([platform, value]) => { %>
                            <% if(value) { %>
                                <a href="<%= value.startsWith('http') ? value : `https://${platform}.com/${value}` %>" target="_blank"
                                   class="social-link group flex items-center justify-center w-10 h-10 bg-white/5 border border-white/10 rounded-full hover:bg-white hover:text-black transition-all duration-300" title="<%= platform %>">
                                    <i data-lucide="<%= platform %>" class="w-4 h-4"></i>
                                </a>
                            <% } %>
                        <% }); %>
                    </div>
                </div>

                <!-- Discord Activity Section (Only shows when active) -->
                <section id="discord-activity-section" class="hidden animate-slide-up">
                    <div class="bg-white/5 border border-white/10 rounded-2xl p-5 backdrop-blur-sm">
                        <div class="flex items-center gap-4">
                            <div class="relative shrink-0">
                                <img id="activity-image" src="" class="w-16 h-16 rounded-xl shadow-lg object-cover" alt="Activity">
                                <div class="absolute -bottom-1 -right-1 bg-green-500 w-3 h-3 rounded-full border-2 border-black animate-pulse"></div>
                            </div>
                            <div class="flex-1 min-w-0 overflow-hidden">
                                <div class="text-[10px] font-bold text-green-400 uppercase tracking-widest mb-1">Currently Playing</div>
                                <h3 id="activity-name" class="text-sm font-bold text-white truncate"></h3>
                                <p id="activity-details" class="text-xs text-gray-300 truncate"></p>
                                <p id="activity-state" class="text-xs text-gray-400 truncate"></p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <!-- Right Column: Skills & Projects -->
            <div class="lg:col-span-8 animate-slide-up" style="animation-delay: 0.2s;">
                
                <!-- Skills Section -->
                <section class="mb-20">
                    <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
                        <span class="w-6 h-1 bg-white"></span>
                        Yetenekler
                    </h2>
                    <div class="flex flex-wrap gap-3">
                        <% config.skills.forEach(skill => { %>
                            <div class="px-5 py-2.5 bg-white/5 border border-white/10 rounded-lg hover:bg-white hover:text-black transition-all duration-300 cursor-default group">
                                <span class="font-mono text-sm font-medium"><%= skill %></span>
                            </div>
                        <% }); %>
                    </div>
                </section>

                <!-- Projects Section -->
                <section>
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-2xl font-bold flex items-center gap-3">
                            <span class="w-6 h-1 bg-white"></span>
                            Projeler
                        </h2>
                        <a href="https://github.com/<%= config.personal.social.github %>" target="_blank" class="text-xs font-mono text-gray-400 hover:text-white transition-colors flex items-center gap-2 group border-b border-transparent hover:border-white pb-0.5">
                            GITHUB <i data-lucide="arrow-right" class="w-3 h-3 group-hover:translate-x-1 transition-transform"></i>
                        </a>
                    </div>

                    <div id="projects-grid" class="grid md:grid-cols-2 gap-5">
                        <!-- Projects will be loaded here via JS -->
                    </div>
                </section>

            </div>
        </div>

    </main>

    <footer class="py-10 text-center text-gray-600 text-sm border-t border-white/10 mt-20">
        <p>&copy; <%= new Date().getFullYear() %> <%= config.personal.name %>. Designed with <span class="text-white">â™¥</span></p>
    </footer>

    <script>
        window.siteConfig = <%- JSON.stringify(config) %>;
    </script>
    <script src="/js/main.js"></script>
</body>
</html>